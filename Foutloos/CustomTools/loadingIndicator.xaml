<UserControl x:Class="Foutloos.CustomTools.loadingIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:gif="http://wpfanimatedgif.codeplex.com"
             xmlns:local="clr-namespace:Foutloos"
             mc:Ignorable="d"
             Width="0"
             Height="0">

    <Border CornerRadius="360" BorderThickness="2" Background="White">
        <Grid>
            <Image Name="loading" gif:ImageBehavior.AnimatedSource="/assets/loadingIndicator.gif" Margin="-36,-50,-36,-10" />
        </Grid>
    </Border>
</UserControl>
