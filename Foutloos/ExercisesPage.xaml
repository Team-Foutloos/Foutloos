<Page x:Class="Foutloos.ExercisesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Foutloos"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ExercisesPage">

    <Grid HorizontalAlignment="Right" Width="800" Background="White">
        <Button Content="&lt; Home" HorizontalAlignment="Left" Margin="10,8,0,0" VerticalAlignment="Top" Width="65" Height="22" Click="Button_Click" FontFamily="Arial Rounded MT Bold"/>
        <Image Source="assets/LogoFoutloosPNG.png" HorizontalAlignment="Left" Height="65" Margin="95,8,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBlock HorizontalAlignment="Left" Margin="208,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="50" FontFamily="Arial Rounded MT Bold"><Run Text="All exercises"/><LineBreak/><Run/></TextBlock>
        <TabControl HorizontalAlignment="Left" Height="345" Margin="10,85,0,0" VerticalAlignment="Top" Width="570">
            <TabItem Header="All" Margin="13,0,-17,0" FontFamily="Arial Rounded MT Bold">
                <Label >
                    <ScrollViewer Height="307" Width="554"/>
                </Label>
            </TabItem>
            <TabItem Header="Selected for you" Margin="15,0,-15,0" FontFamily="Arial Rounded MT Bold">
                <Label >
                    <ScrollViewer Height="307" Width="554"/>
                </Label>
            </TabItem>

            <TabItem Header="Amature" Margin="15,0,-15,0" FontFamily="Arial Rounded MT Bold" />
            <TabItem Header="Normal" Margin="15,0,-15,0" FontFamily="Arial Rounded MT Bold" />
            <TabItem Header="Expert" Margin="15,0,-15,0" FontFamily="Arial Rounded MT Bold" />
            <TabItem Header="Finished" Margin="15,0,-15,0" FontFamily="Arial Rounded MT Bold" />
        </TabControl>
        <Button Content="Start selected exercise" HorizontalAlignment="Left" Margin="620,390,0,0" VerticalAlignment="Top" Width="145" FontFamily="Arial Rounded MT Bold"/>
        <RadioButton Content="Text (Speech optional)" HorizontalAlignment="Left" Margin="620,350,0,0" VerticalAlignment="Top"/>
        <RadioButton Content="Spoken only&#xD;&#xA;" HorizontalAlignment="Left" Margin="620,370,0,0" VerticalAlignment="Top"/>
        <TextBlock HorizontalAlignment="Left" Margin="620,251,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold"><Run FontSize="14" Text="Description"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="620,170,0,0" TextWrapping="Wrap" Text="Exercise #" VerticalAlignment="Top" FontSize="14" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="620,194,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="15"><Run Text="Level #"/><LineBreak/><Run/></TextBlock>
        <TextBox HorizontalAlignment="Left" Height="63" Margin="575,22,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215"/>
        <TextBlock HorizontalAlignment="Left" Margin="620,214,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="15" Text="Type #"/>
        <TextBlock HorizontalAlignment="Left" Margin="620,270,0,0" TextWrapping="Wrap" Text="orem ipsum dolor sit amet, consectetur adipiscing elit. Donec odio turpis, volutpat tempor gravida at, tincidunt et est. Suspendisse euismod placer" VerticalAlignment="Top" RenderTransformOrigin="0.51,-1.25" Height="50" Width="160"/>
        <Label Content="WPM:" HorizontalAlignment="Left" Margin="582,20,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.385,0" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="CPM:" HorizontalAlignment="Left" Margin="582,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.385,0" FontFamily="Arial Rounded MT"/>
        <Label Content="Total Errors:" HorizontalAlignment="Left" Margin="582,60,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.385,0" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="69" HorizontalAlignment="Left" Margin="715,19,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.385,0" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="200" HorizontalAlignment="Left" Margin="715,39,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.385,0" FontFamily="Arial Rounded MT Bold"/>
        <Label Content="4" HorizontalAlignment="Left" Margin="715,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.385,0" FontFamily="Arial Rounded MT Bold"/>
        <TextBlock HorizontalAlignment="Left" Margin="589,8,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontFamily="Arial Rounded MT Bold"><Run Text="Previous results"/><LineBreak/><Run/></TextBlock>

    </Grid>
</Page>
